<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/feed_item_left_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLength="20"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/feed_item_phone_no_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/greydark"
                android:ellipsize="end"
                android:maxLength="20"
                android:singleLine="true"
                android:text=""
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/feed_item_vip_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/vip"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/feed_item_call_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:focusable="false"
        android:src="@drawable/call_logo" />

    <LinearLayout
        android:id="@+id/feed_item_right_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_item_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="20"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/feed_item_sr_tv"
            android:textColor="@color/greydark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="20"
            android:singleLine="true"
            android:text=""
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>